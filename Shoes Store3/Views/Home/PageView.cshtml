@model Shoes_Store3.Models.ViewShoes

@{
    ViewBag.Title = "PageView";
}


@using Shoes_Store3.Models


@{
    ViewBag.Title = "Обувь";
}
<h2>PageView</h2>


<table class="table">
    <tr>
        <th>
           Фирма
        </th>
        <th>
           Модель
        </th>
        <th>
            Размер
        </th>
        <th>
            Цена
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Shoess)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Firma.Firma_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<br />
<div class="btn-group">
    @Html.PageLinks(Model.PagePag, p => Url.Action("PageView", new { page = p }))
</div>




