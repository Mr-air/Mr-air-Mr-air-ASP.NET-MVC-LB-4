@model Shoes_Store3.Models.ShoesFilterList

@{
    ViewBag.Title = "FilterView";
}

<h2>FilterView</h2>
<form method="get">
    <div>
        <label>Автор: </label>
        @Html.DropDownList("Firma", Model.Shoes as SelectList, htmlAttributes: new { @class = "form-control" })
        <input type="submit" value="Фильтр" />
    </div>
</form>
<table class="table">
    <tr>
        <th>
            Фирма
        </th>
        <th>
            Модель
        </th>
        <th>
            Размер
        </th>
        <th>
            Цена
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Shoes)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Firma.Firma_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<br />
